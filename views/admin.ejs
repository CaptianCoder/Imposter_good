      <button id="startButton" class="start-btn">Start Round</button>
      <button id="revealButton" class="reveal-btn">Reveal Questions</button>
      <button id="endButton" class="end-btn">End Round</button>
    </div>

    <div id="error" class="error"></div>
  </div>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/game.js"></script>
</body>
</html>