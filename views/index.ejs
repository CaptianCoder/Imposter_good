<!DOCTYPE html>
<html>
<head>
  <title>Imposter Game</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <div id="authSection">
      <h1>ðŸŽ® Imposter Game</h1>
      <div class="form-group">
        <input type="text" id="nameInput" placeholder="Enter your name" autocomplete="off">
        <div id="passwordGroup" style="display: none;">
          <input type="password" id="passwordInput" placeholder="Admin password" autocomplete="new-password">
        </div>
        <button id="joinButton">Join Game</button>
      </div>
      <div id="error" class="error"></div>
    </div>

    <div id="adminPanel" style="display: none;">
      <h2>Admin Controls - Round <span id="roundNumber">0</span></h2>
      <div class="form-group">
        <select id="gameMode">
          <option value="imposter">Imposter Mode</option>
          <option value="guessing">Guessing Mode</option>
        </select>
<!-- Replace existing category select with this -->
      <select id="category">
        <option value="random">Random Category</option>
        <!-- Options will be populated dynamically -->
      </select>
        <select id="imposterCount"></select>
      </div>
      <div class="admin-buttons">
        <button id="startButton" class="start-btn">Start Round</button>
        <button id="endButton" class="end-btn">End Round</button>
      </div>
    </div>

    <div id="playerSection">
      <h2>Players (<span id="playerCount">0</span>/14)</h2>
      <ul id="playerList"></ul>
    </div>

    <div id="gameSection" style="display: none;">
      <h2>Your Role: <span id="role"></span></h2>
      <h3 id="contentDisplay"></h3>
      <div id="answerSection" style="display: none;">
        <input type="text" id="answerInput" placeholder="Type your answer...">
        <button id="submitAnswer">Submit</button>
      </div>
      <div id="answersList"></div>
    </div>
  </div>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/game.js"></script>
</body>
</html>